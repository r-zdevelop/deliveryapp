# Delivery App - MySQL Configuration
# Purpose: Optimized settings for delivery app database

[mysqld]
# Character Set & Collation
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Performance Tuning
max_connections = 200
innodb_buffer_pool_size = 256M
innodb_log_file_size = 64M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# Query Cache (Deprecated in MySQL 8.0 but kept for reference)
# query_cache_type = 1
# query_cache_size = 32M

# Slow Query Log (Development)
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Error Log
log_error = /var/log/mysql/error.log

# Binary Logging (for replication and backups)
# server-id = 1
# log_bin = /var/log/mysql/mysql-bin.log
# binlog_expire_logs_seconds = 604800

# Security
# bind-address = 127.0.0.1  # Uncomment for production (localhost only)

[client]
default-character-set = utf8mb4
