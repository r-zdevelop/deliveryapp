# Delivery App - Environment Configuration
# Copy this file to .env and update values

# Application
APP_ENV=development
APP_DEBUG=true
APP_NAME="Delivery App"
APP_URL=http://localhost:8080

# Database (MySQL)
DB_HOST=database
DB_PORT=3306
DB_NAME=deliveryapp
DB_USER=delivery_user
DB_PASSWORD=secure_password_change_me
DB_ROOT_PASSWORD=root_password_change_me

# Cache (Redis)
REDIS_HOST=cache
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_me

# Session
SESSION_LIFETIME=120
SESSION_DRIVER=redis

# Security
JWT_SECRET=your_jwt_secret_key_change_me_in_production
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# Email (for notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@deliveryapp.local
MAIL_FROM_NAME="Delivery App"

# Payment Gateway (Stripe)
STRIPE_PUBLIC_KEY=pk_test_your_key_here
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=your_firebase_server_key
FIREBASE_SENDER_ID=your_sender_id

# Google Maps API (for delivery tracking)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
