{
    "name": "deliveryapp/backend",
    "description": "Delivery App Backend - Clean Architecture REST API",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-redis": "*",
        "firebase/php-jwt": "^6.10",
        "vlucas/phpdotenv": "^5.6",
        "monolog/monolog": "^3.7",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.10",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "DeliveryApp\\Domain\\": "src/Domain/",
            "DeliveryApp\\Application\\": "src/Application/",
            "DeliveryApp\\Infrastructure\\": "src/Infrastructure/",
            "DeliveryApp\\Presentation\\": "src/Presentation/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=max",
        "cs:check": "phpcs --standard=PSR12 src",
        "cs:fix": "phpcbf --standard=PSR12 src",
        "dev": "php -S localhost:8000 -t public",
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
